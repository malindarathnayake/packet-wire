# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_TITLE=Packet Wire Dashboard
MAX_CLIENTS=100
METRICS_RETENTION_HOURS=24

# UDP Listener Configuration
UDP_LISTEN_ADDR=:9000
CAPTURE_DIR=/captures
UDP_BUFFER_SIZE=2048
REPLY_MODE=true
CLIENT_ID=listener-01
DASHBOARD_URL=http://dashboard:8080/api/metrics
HEARTBEAT_INTERVAL=5

# Encryption (optional - leave empty to disable)
ENCRYPTION_PASSPHRASE=

# File Reception (optional)
FILE_RECEIVE_MODE=false
FILE_RECEIVE_DIR=/captures/files

# UDP Sender Configuration (for testing)
SENDER_TARGET=udp-listener:9000
SENDER_MESSAGE=Test packet
SENDER_INTERVAL=10s
SENDER_CLIENT_ID=sender-01

